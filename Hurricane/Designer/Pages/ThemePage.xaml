<UserControl x:Class="Hurricane.Designer.Pages.ThemePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:designer="clr-namespace:Hurricane.Designer"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000" DataContext="{x:Static designer:DesignerViewModel.Instance}">
    <Grid>
         <Grid.RowDefinitions>
             <RowDefinition Height="Auto"/>
             <RowDefinition Height="*"/>
         </Grid.RowDefinitions>
        <TextBlock Text="{Binding CurrentMode}" FontSize="30" Margin="15" FontFamily="Segoe UI Light"/>
    </Grid>
</UserControl>
