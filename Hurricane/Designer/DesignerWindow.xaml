<controls:MetroWindow x:Class="Hurricane.Designer.DesignerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:viewModels="clr-namespace:Hurricane.Designer"
        Title="{StaticResource Designer}" MinHeight="600" MinWidth="1000" Height="640" Width="1000" GlowBrush="{StaticResource AccentColorBrush}" DataContext="{x:Static viewModels:DesignerViewModel.Instance}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Hurricane Designer" FontSize="30" Margin="15" FontFamily="Segoe UI Light"/>
        <ContentPresenter Grid.Row="1" Content="{Binding CurrentView}" Margin="15"/>
    </Grid>
</controls:MetroWindow>
